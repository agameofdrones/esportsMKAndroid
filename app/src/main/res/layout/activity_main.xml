<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.esports.MainActivity">


    <Button
        android:id="@+id/csBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="#274555"
        android:drawableLeft="@drawable/csgo_logo"
        android:ems="10"
        android:paddingLeft="25dp"
        android:text="Counter Strike"
        android:textAlignment="center"
        android:textColor="#fff"
        android:onClick="goToGameSpecific"
        android:textSize="30sp" />

    <Button
        android:id="@+id/dotaBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="#a6172d"
        android:drawableLeft="@drawable/dota2_logo"
        android:ems="10"
        android:paddingLeft="25dp"
        android:text="Dota 2"
        android:textAlignment="center"
        android:textColor="#fff"
        android:onClick="goToGameSpecific"
        android:textSize="30sp" />

    <Button
        android:id="@+id/lolBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="#285943"
        android:drawableLeft="@drawable/lol_logo"
        android:ems="10"
        android:paddingLeft="25dp"
        android:text="League of Legends"
        android:textAlignment="center"
        android:textColor="#fff"
        android:onClick="goToGameSpecific"
        android:textSize="30sp" />

    <Button
        android:id="@+id/owBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="#F99E1A"
        android:drawableLeft="@drawable/ow_logo"
        android:ems="10"
        android:paddingLeft="25dp"
        android:text="Overwatch"
        android:textAlignment="center"
        android:textColor="#fff"
        android:onClick="goToGameSpecific"
        android:textSize="30sp" />


</LinearLayout>
